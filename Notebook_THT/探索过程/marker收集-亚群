cd8_tcell_markers = {
    "1": ["TCF7", "LEF1", "CCR7", "SELL", "MAL"],#这些是T naive/Tcm的marker
    "2": ["IL7R", #IL7R在T细胞激活后会迅速不表达,和记忆细胞的形成一些关系
          "GPR183", #说是Tm
          "ZFP36L2", #主要存在于Tn和Tm
          "CXCR4"], #主要存在于Tn和Tm,激活后表达会迅速下降
    "3": ["ZNF683", #高表达是Trm的标志
          "CD52", 不清楚
          "HOPX", #pre-effector T cells
          "ID2", #ILC
          "CXCR6", #Trm
          "XCL1", #NK-like
          "XCL2"], #NK-like
    "4": ["TBX21", "ASCL2", "CX3CR1", "KLRG1"], #T细胞衰老标志
